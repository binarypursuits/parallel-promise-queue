{
	"compilerOptions": {
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es6"
		],
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": true
	},
	"files": [
		"src/index.ts"
	],
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"tests"
	]
}
